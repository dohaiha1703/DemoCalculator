<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonBorder" parent="Widget.AppCompat.Button.Borderless"/>

    <style name="ButtonBorder.Accent">
        <item name="android:textAppearanceSmall"></item>
        <item name="android:background">@drawable/bg_btn_outline</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">32sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonBorder.Orange">
        <item name="android:background">@drawable/bg_btn_orange</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">52sp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
